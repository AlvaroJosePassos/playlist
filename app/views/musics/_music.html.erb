<div id="<%= dom_id music %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= music.title %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this music", music, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this music", edit_music_path(music), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
